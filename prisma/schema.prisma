generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Users {
  id          Int          @id @default(autoincrement())
  dynamic_id  String
  signer_uids SignerUIDs[]
}

model SignerUIDs {
  id         Int     @id @default(autoincrement())
  uid        Int
  signer_uid String
  casts      Casts[]
  user       Users   @relation(fields: [uid], references: [id])
}

model Casts {
  id          Int        @id @default(autoincrement())
  cast_text   String
  ipfs_url    String
  date_time   DateTime
  published   Boolean
  signerUidId Int
  signer_uid  SignerUIDs @relation(fields: [signerUidId], references: [id])
}
