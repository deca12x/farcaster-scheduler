datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int          @id @default(autoincrement())
  dynamic_id   String
  signer_uuids SignerUUID[]
  casts        Cast[]
}

model SignerUUID {
  id          Int    @id @default(autoincrement())
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
  signer_uuid String
}

model Cast {
  id        Int      @id @default(autoincrement())
  cast_text String
  ipfs_url  String
  date_time DateTime
  published Boolean
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
