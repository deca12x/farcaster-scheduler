generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Users {
  address     String        @id
  signer_uids SignerUUIDs[]
}

model SignerUUIDs {
  id           Int     @id @default(autoincrement())
  address_user String
  signer_uid   String
  name         String
  image        String
  fid          String
  casts        Casts[]
  user         Users   @relation(fields: [address_user], references: [address])
}

model Casts {
  id            Int         @id @default(autoincrement())
  cast_text     String
  ipfs_url      String
  datetime      DateTime
  published     Boolean
  fid           Int // Use fid instead of signerUidId
  likes_count   Int
  recasts_count Int
  channel_name  String
  signerUidId   Int
  signer_uid    SignerUUIDs @relation(fields: [fid], references: [id])
}
